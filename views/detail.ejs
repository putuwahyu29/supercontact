<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Kontak</h2>
      <% if (!contact) { %>
        <div class="alert alert-danger fw-bold" role="alert">
          Data kontak tidak ada <br>
          <a href="/contact" class="alert-link fw-normal">Kembali</a>
        </div>
        <% } else { %>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">
                <%= contact.nama %>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= contact.noHP %>
              </h6>
              <p class="card-text">
                <%= contact.email %>
              </p>
              <a href="/contact" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Kembali</a>
              <hr>
              <a href="/contact/edit/<%= contact.nama %>" class="btn btn-success"><i class="bi bi-pencil-square"></i>
                Edit</a>
              <form action="/contact?_method=DELETE" method="post" class="d-inline">
                <input type="hidden" name="nama" value="<%= contact.nama %>">
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Hapus</button>
              </form>
            </div>
          </div>
          <% } %>
    </div>
  </div>
</div>